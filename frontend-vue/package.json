{
  "name": "frontend-vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "format": "npx prettier --ignore-path .prettierignore --write '**/*.{css,sass,scss,htm,html,vue,ts,js}'",
    "format:branch": "npx prettier --ignore-path .prettierignore $(git diff --name-only --diff-filter=ACMR $(git merge-base HEAD main) | grep -E '\\.(css|sass|scss|htm|html|vue|ts|js)$' | sed 's|frontend-vue/||') -w -u",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "lint:report": "eslint . --format html --output-file eslint-report.html",
    "lint:style": "stylelint \"**/*.{vue,css,scss}\" --fix",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rimraf dist node_modules/.vite",
    "build:analyze": "vite build --mode analyze",
    "prepare": "husky install",
    "gen-client": "openapi-ts"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "devicon": "^2.17.0",
    "file-icons-js": "github:websemantics/file-icons-js",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "uuid": "^13.0.0",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-country-flag-next": "^2.3.2",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@hey-api/openapi-ts": "^0.90.3",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.7",
    "@types/uuid": "^10.0.0",
    "@types/web": "^0.0.260",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/devtools": "^8.0.2",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-vue": "^10.2.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "eslint-plugin-yaml": "^1.1.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.2.4",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.4",
    "sass": "^1.89.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-vuetify": "^2.1.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "vue-tsc --noEmit",
      "eslint --fix --cache --cache-location node_modules/.cache/.eslintcache",
      "stylelint --fix --cache --cache-location node_modules/.cache/.stylelintcache",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix --cache --cache-location node_modules/.cache/.eslintcache",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix --cache --cache-location node_modules/.cache/.stylelintcache",
      "prettier --write"
    ],
    "*.{json,jsonc,json5,md,yaml,yml,html}": [
      "prettier --write"
    ]
  }
}
